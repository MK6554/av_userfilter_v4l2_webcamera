{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUJIMBO",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/UfWebCameraV4L", // Path to your compiled executable
            "args": [], // Arguments if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb", // Ensure this is the correct path to gdb
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Attach to Process Using UF",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}", // Allows you to pick the process you want to attach to
            "program": "${workspaceFolder}/build/libUfWebCameraV4L.so", // Optional: Used for symbol resolution
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb", // Ensure this is the correct path to gdb
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
}
